        <?php endif; ?>
        <?php if($item->status!='2'): ?>
        <a href="javascript: void(0)" onclick="xoasanpham(<?php echo $item->id; ?>)" class="btn btn4 btn_trash" title="<?php echo Lang::get('button.btn.trash'); ?>"></a>
