<script>
    function phantrang(page) {

        urlpost = "<?php echo URL::action('NewsController@postChuyenMucAjax'); ?>?page=" + page + "&catslug=<?php if(isset($catslugs)): ?><?php if($catslugs==''): ?><?php else: ?><?php echo $arrnews[0]->catenewsSlug; ?><?php endif; ?> <?php endif; ?>";
        var request = jQuery.ajax({
            url: urlpost,
            type: "POST",
            dataType: "html"
        });
        request.done(function(msg) {
            jQuery('#productcategory').prepend('  <div class="loader-ajax"></div>').fadeOut(500);
            setTimeout(function() {
                jQuery(window).scrollTop(jQuery(".page_content_offset").offset().top);
                jQuery('#productcategory').html(msg).fadeIn(500);
            }, 400);
        })

    }
</script>
