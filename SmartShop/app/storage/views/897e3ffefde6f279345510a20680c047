<script>
    function phantrang(page) {

        NProgress.start();
        var urlpost = "<?php echo URL::action('\BackEnd\FeedbackController@postAjaxPhanHoi'); ?>?page=" + page
        if (jQuery('#datepicker').val() != '' && jQuery('#datepicker1').val() != '') {
            urlpost = "<?php echo URL::action('\BackEnd\FeedbackController@postAjaxLocPhanHoi'); ?>?fromtime=" + jQuery('#datepicker').val() + "&totime=" + jQuery('#datepicker1').val() + "&page=" + page;
        }
        if (jQuery('#searchblur').val() != '') {
            urlpost = "<?php echo URL::action('\BackEnd\FeedbackController@postAjaxSearchPhanHoi'); ?>?keyword=" + jQuery('#searchblur').val() + "&page=" + page;
        }
        var request = jQuery.ajax({
            url: urlpost,
            type: "POST",
            dataType: "html"
        });
        request.done(function(msg) {

            NProgress.done();
            jQuery('#tablefeedback').html(msg);
        });
    }
    function locdulieu() {
        jQuery('#searchblur').val("");

        NProgress.start();
        var request = jQuery.ajax({
            url: "<?php echo URL::action('\BackEnd\FeedbackController@postAjaxLocPhanHoi'); ?>?fromtime=" + jQuery('#datepicker').val() + "&totime=" + jQuery('#datepicker1').val(),
            type: "POST",
            dataType: "html"
        });
        request.done(function(msg) {

            NProgress.done();
            jQuery('#tablefeedback').html(msg);
        });
    }
    function timkiem() {
        jQuery('#datepicker').val('')
        jQuery('#datepicker1').val('')

        NProgress.start();
        var request = jQuery.ajax({
            url: "<?php echo URL::action('\BackEnd\FeedbackController@postAjaxSearchPhanHoi'); ?>?keyword=" + jQuery('#searchblur').val(),
            type: "POST",
            dataType: "html"
        });
        request.done(function(msg) {

            NProgress.done();
            jQuery('#tablefeedback').html(msg);
        });
    }
    function xoasanpham(id) {
        jConfirm("<?php echo Lang::get('messages.delete_confirm'); ?>", "<?php echo Lang::get('messages.alert'); ?>", function(r) {
            if (r == true) {

                NProgress.start();
                var request = jQuery.ajax({
                    url: "<?php echo URL::action('\BackEnd\FeedbackController@postXoaPhanHoi'); ?>?id=" + id,
                    type: "POST",
                    dataType: "html"
                });
                request.done(function(msg) {

                    NProgress.done();
                    jQuery('#tablefeedback').html(msg);
                });
                return false;
            } else {
                return false;
            }
        })
    }
    jQuery(document).ready(function() {

        jQuery('#searchblur').keypress(function(e) {
            if (e.which == 10 || e.which == 13) {
                jQuery('#datepicker').val('')
                jQuery('#datepicker1').val('')

                NProgress.start();
                var request = jQuery.ajax({
                    url: "<?php echo URL::action('\BackEnd\FeedbackController@postAjaxSearchPhanHoi'); ?>?keyword=" + jQuery('#searchblur').val(),
                    type: "POST",
                    dataType: "html"
                });
                request.done(function(msg) {

                    NProgress.done();
                    jQuery('#tablefeedback').html(msg);
                });
            }
        });
    });</script>
