<?php $i = ($pagedata->getCurrentPage() - 1) * 10 + 1; ?>
<?php foreach($pagedata as $item): ?>
<tr> 
    <td><label value="cateNews"><?php echo $i++; ?></label></td> 
    <td><label value="cateNews"><?php echo str_limit( $item->pageName, 30, '...'); ?></label></td> 
    <td><label value="cateNews"><?php echo $item->pageTag; ?></label></td> 
    <td><label value="cateNews"><?php echo str_limit($item->pageSlug, 30, '...'); ?> </label></td> 
    <td><label value="cateNews"><?php echo date('d/m/Y h:i:s', $item->pageTime); ?></label></td> 
    <td><label value="cateNews"><?php
            if ($item->status == 0) {
                echo "chờ đăng";
            } else if ($item->status == 1) {
                echo "đã đăng";
            } else if ($item->status == 2) {
                echo "đã xóa";
            }
            ?>
        </label>
    </td> 
    <td>

        <a href="<?php echo URL::action('PageController@getPageEdit'); ?>?id=<?php echo $item->id; ?>" class="btn btn4 btn_book" title="Sửa"></a>
        <?php if($item->status=='2'): ?>
        <a href="<?php echo URL::action('PageController@getPageActive'); ?>?id=<?php echo $item->id; ?>" class="btn btn4 btn_flag" title="Kích hoạt"></a>
        <?php endif; ?>
        <?php if($item->status=='0'): ?>
        <a href="<?php echo URL::action('PageController@getPagePost'); ?>?id=<?php echo $item->id; ?>" class="btn btn4 btn_world" title="Đăng trang"></a>
        <?php endif; ?>
        <?php if($item->status!='2'): ?>
        <a href="<?php echo URL::action('PageController@getPageDelete'); ?>?id=<?php echo $item->id; ?>" class="btn btn4 btn_trash" title="Xóa"></a>
        <?php endif; ?>

    </td> 
</tr> 
<?php endforeach; ?>
<?php if($link!=''): ?>
<tr>
    <td colspan="9"><?php echo $link; ?></td>
</tr>
<?php endif; ?>