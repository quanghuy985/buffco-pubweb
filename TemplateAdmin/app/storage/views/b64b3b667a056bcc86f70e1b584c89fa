<?php foreach($arrPromotion as $item): ?>
<tr> 

    <td><label value="cateMenuer"><?php echo $item->id; ?></label></td> 
    <td><label value="cateMenuer"><?php echo $item->promotionName; ?></label></td>
    <td><label value="cateMenuer"><?php echo str_limit( $item->promotionContent, 50, '...'); ?></label></td>
    <td><label value="cateMenuer"><?php echo $item->promotionAmount; ?></label></td>
    <td><label value="cateMenuer"><?php echo date('d/m/Y h:i:s', $item->time); ?></label></td> 
    <td><label value="cateMenuer"><?php
            if ($item->status == 0) {
                echo "chờ kích hoạt";
            } else if ($item->status == 1) {
                echo "đã kích hoạt";
            } else if ($item->status == 2) {
                echo "đã xóa";
            }
            ?>
        </label>
    </td> 
    <td>

        <a href="<?php echo URL::action('PromotionController@getPromotionEdit'); ?>?id=<?php echo $item->id; ?>" class="btn btn4 btn_book" title="Sửa"></a>
        <?php if($item->status=='2'): ?>
        <a href="javascript: void(0)" onclick="kichhoat(<?php echo $item->id; ?>, 0)" class="btn btn4 btn_flag" title="Khởi tạo"></a>
        <?php endif; ?>
        <?php if($item->status=='0'): ?>
        <a href="javascript: void(0)" onclick="kichhoat(<?php echo $item->id; ?>, 1)" class="btn btn4 btn_world" title="Kích hoạt"></a>
        <?php endif; ?>
        <?php if($item->status!='2'): ?>
        <a href="javascript: void(0)" onclick="xoasanpham(<?php echo $item->id; ?>)" class="btn btn4 btn_trash" title="Xóa"></a>
        <?php endif; ?>

    </td> 
</tr> 
<?php endforeach; ?>
<?php if($link!=''): ?>
