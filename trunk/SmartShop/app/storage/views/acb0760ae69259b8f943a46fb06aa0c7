
<?php
$i = ($arrUser->getCurrentPage() - 1) * 10 + 1;
?>
<?php if(count($arrUser)>0): ?>
<?php foreach($arrUser as $item): ?>
<tr>
    <td class="text-center"><label value="cateNews"><?php echo $i++; ?></label></td>
    <td><a href="<?php echo URL::action('\BackEnd\UserController@getUserDetail'); ?>/<?php echo $item->id; ?>"><?php echo $item->email; ?></a></td>
    <td><label value="user"><?php echo str_limit($item->phone, 10, '...'); ?> </label></td>
    <td><label value="user">
            <?php
            if ($item->status == 0) {
                echo "chờ kích hoạt";
            } else if ($item->status == 1) {
                echo "đã kích hoạt";
            } else if ($item->status == 2) {
                echo "đã xóa";
            }
            ?>
        </label>
    </td>
    <td>
        <a href="<?php echo URL::action('\BackEnd\UserController@getUserEdit'); ?>/<?php echo $item->id; ?>"
           title="Sửa"><?php echo Lang::get('general.edit'); ?></a>
        <?php if($item->status=='2'): ?>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <a href="javascript: void(0)" onclick="active_element('<?php echo URL::action('\BackEnd\UserController@postActiveUsers'); ?>',<?php echo $item->id; ?>)" title="<?php echo Lang::get('general.lock'); ?>"><?php echo Lang::get('general.lock'); ?></a>
        <?php endif; ?>
        <?php if($item->status=='0'): ?>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <a href="javascript: void(0)" onclick="active_element('<?php echo URL::action('\BackEnd\UserController@postPublicUsers'); ?>',<?php echo $item->id; ?>)" title="<?php echo Lang::get('general.world'); ?>"><?php echo Lang::get('general.world'); ?></a>
        <?php endif; ?>
        <?php if($item->status!='2'): ?>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <a href="javascript: void(0)" onclick="deleteproduct('<?php echo URL::action('\BackEnd\UserController@postDeleteUsers'); ?>',<?php echo $item->id; ?>)" title="<?php echo Lang::get('general.delete'); ?>"><?php echo Lang::get('general.delete'); ?></a>
        <?php endif; ?>
    </td>
</tr>
<?php endforeach; ?>
<?php if($link!=''): ?>
<tr>
    <td colspan="5"><?php echo $link; ?></td>
</tr>
<?php endif; ?>
<?php else: ?>
<tr>
    <td colspan="5"><?php echo Lang::get('general.data_empty'); ?></td>
</tr>
