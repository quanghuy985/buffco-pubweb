<?php
$i = 1;
if (Input::get('page') > 1) {
    $i = (Input::get('page') - 1) * 10 + 1;
}
$user_status = Lang::get('general.user_status');
?>
<?php foreach($arrayAdmin as $item): ?>
<tr>
    <td><label value="cateMenuer"><?php echo $i++; ?></label></td>
    <td><label value="cateMenuer"><?php echo str_limit( $item->email, 30, '...'); ?></label></td>
    <td><label value="cateMenuer"><?php echo str_limit( $item->firstname.' '.$item->lastname, 30, '...'); ?></label></td>
    <td><label value="cateMenuer"><a href="<?php echo URL::action('\BackEnd\GroupAdminController@getGroupAdminEdit'); ?>?id=<?php echo $item->group_admin_id; ?>"><?php echo str_limit( $item->groupadminName, 30, '...'); ?></a> </label>

    </td>
    <td><label value="cateMenuer"><?php echo date('d/m/Y h:i:s', $item->time); ?></label></td>
    <td><label value="cateMenuer">
            <?php
            if (array_key_exists($item->status, $user_status)) {
                echo $user_status[$item->status];
            }
            ?>
        </label>
    </td>
    <td>
        <a href="<?php echo URL::action('\BackEnd\AdminController@getAdminEdit'); ?>?id=<?php echo $item->email; ?>" class="btn btn4 btn_book" title="<?php echo Lang::get('button.btn2.book'); ?>"></a>
        <?php if($item->status=='2'): ?>
        <a href="javascript: void(0)" onclick="kichhoat('<?php echo $item->id; ?>', 0)" class="btn btn4 btn_flag" title="<?php echo Lang::get('button.btn2.flag'); ?>"></a>
        <?php endif; ?>
        <?php if($item->status=='0'): ?>
        <a href="javascript: void(0)" onclick="kichhoat('<?php echo $item->id; ?>', 1)" class="btn btn4 btn_world" title="<?php echo Lang::get('button.btn2.world'); ?>"></a>
        <?php endif; ?>
        <?php if($item->status!='2'): ?>
        <a href="javascript: void(0)" onclick="xoasanpham('<?php echo $item->email; ?>')" class="btn btn4 btn_trash" title="<?php echo Lang::get('button.btn2.trash'); ?>"></a>
        <?php endif; ?>

    </td>
</tr>
<?php endforeach; ?>
<?php if($link!=''): ?>
<tr>
    <td colspan="7"><?php echo $link; ?></td>
</tr>
<?php endif; ?>