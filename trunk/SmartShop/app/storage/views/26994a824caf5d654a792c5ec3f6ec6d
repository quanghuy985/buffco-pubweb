<?php $i = ($arrSupporter->getCurrentPage() - 1) * 10 + 1;
$support_status = Lang::get('general.supporter_status'); ?>
<?php foreach($arrSupporter as $item): ?>
<tr>

    <td><label value="cateSupporter"><?php echo $i++; ?></label></td>
    <td><label value="cateSupporter"><?php echo str_limit( $item->supporterName, 30, '...'); ?></label></td>
    <td><label value="cateSupporter"><?php echo str_limit($item->supporterGroupName , 30, '...'); ?></label></td>
    <td><label value="cateSupporter"><?php echo str_limit($item->supporterNickYH , 30, '...'); ?></label></td>
    <td><label value="cateSupporter"><?php echo str_limit($item->supporterNickSkype, 30, '...'); ?> </label></td>
    <td><label value="cateSupporter"><?php echo str_limit($item->supporterPhone, 30, '...'); ?> </label></td>
    <td><label value="cateSupporter"><?php echo str_limit($item->time, 30, '...'); ?> </label></td>
    <td><label value="cateSupporter">
            <?php
            if (array_key_exists($item->status, $support_status)) {
                echo $support_status[$item->status];
            }
            ?>
        </label>
    </td>
    <td>

        <a href="<?php echo URL::action('\BackEnd\SupporterController@getSupporterEdit'); ?>?id=<?php echo $item->id; ?>" class="btn btn4 btn_book" title="<?php echo Lang::get('button.btn3.book'); ?>"></a>
        <?php if($item->status=='2'): ?>
        <a href="javascript: void(0)" onclick="kichhoat(<?php echo $item->id; ?>, 0)" class="btn btn4 btn_flag" title="<?php echo Lang::get('button.btn3.flag'); ?>"></a>
        <?php endif; ?>
        <?php if($item->status=='0'): ?>
        <a href="javascript: void(0)" onclick="kichhoat(<?php echo $item->id; ?>, 1)" class="btn btn4 btn_world" title="<?php echo Lang::get('button.btn3.world'); ?>"></a>
        <?php endif; ?>
        <?php if($item->status!='2'): ?>
        <a href="javascript: void(0)" onclick="xoasanpham(<?php echo $item->id; ?>)" class="btn btn4 btn_trash" title="<?php echo Lang::get('button.btn3.trash'); ?>"></a>
        <?php endif; ?>

    </td>

</tr>
<?php endforeach; ?>
<?php if(count($arrSupporter)==0): ?>
<tr>
    <td colspan="9"><?php echo Lang::get('general.data_empty'); ?></td>
</tr>
<?php endif; ?>
<?php if($link!=''): ?>
<tr>
    <td colspan="9"><?php echo $link; ?></td>
</tr>
<?php endif; ?>