<script>
    function phantrang(page) {
        var request = jQuery.ajax({
            url: "<?php echo URL::action('ProductController@postAjaxChuyenMuc'); ?>?slug=<?php echo $slugcate->cateSlug; ?>&page=" + page,
            type: "POST",
            dataType: "html"
        });
        request.done(function(msg) {
            jQuery('#hienthisanphams').html(msg);
        });
    }
</script>
